<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <CustomAction Id="CheckUserIDValidity" BinaryKey="PaletteInstallerCA" DllEntry="CheckUserIDValidity" />
  </Fragment>
  <Fragment>
    <!--Property Id="UserID" Value=""/-->
    <UI>   
      
      <Dialog Id="UserRegistrationDlg" Width="370" Height="270" Title="Palette Agent Setup" NoMinimize="yes">
        <Control Type="Text" Id="ControllerRegistrationKey" Width="290" Height="10" X="20" Y="60" Text="Please Enter Controller Registration Key:" />
        <Control Id="UserIdEdit" Type="Edit" Width="250" Height="18" X="20" Y="100" Property="USERID" Text="{80}" />
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Event="DoAction" Value="CheckUserIDValidity">1</Publish>
          <Publish Event="NewDialog" Value="InstallDirDlg">IDISVALID = "1"</Publish>
          <Publish Event="SpawnDialog" Value="UserIdError">IDISVALID = "0"</Publish>
          <!--Publish Event="SpawnDialog" Value="UserIdError"><![CDATA[USERID = ""]]></Publish-->
        </Control>
        <Control Id="Title" Type="Text" X="15" Y="6" Width="219" Height="28" Transparent="yes" NoPrefix="yes" Text="Palette Configuration" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
      </Dialog>
      
      <Dialog Id="UserIdError" Width="260" Height="85" NoMinimize="no" Title="Palette Agent Setup">
        <Control Id="UserIdErrorDesc" Type="Text" Width="194" Height="30" X="48" Y="15" Text="Please enter a User ID." />
        <Control Id="UserIdErrorOk" Type="PushButton" X="97" Y="57" Width="56" Height="17" Text="Ok">
          <Publish  Event="EndDialog" Value="Return">1</Publish>
        </Control>
      </Dialog>
      
    </UI>
  </Fragment>
</Wix>