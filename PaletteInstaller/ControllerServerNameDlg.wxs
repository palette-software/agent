<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <!--TODO: Change C-->
    <CustomAction Id="UpdateIniWithServerName" BinaryKey="PaletteInstallerCA" DllEntry="UpdateIniWithServerName" 
                  Execute="immediate" Return="check" />
  </Fragment>
  <Fragment>
    <EnsureTable Id="ComboBox"/>
    <Property Id="SERVERNAME" Value=".palette-software.com"/>
    <UI>
      <Dialog Id="LicenseErrorDlg" Width="260" Height="85" NoMinimize="yes" Title="Invalid License Key">
        <Control Type="Text" Id="ErrorText" Width="350" Height="17" X="60" Y="25" Text="The License Key entered was invalid." />
        <Control Id="Ok" Type="PushButton" X="97" Y="57" Width="66" Height="17" Text="OK">
          <Publish Event="EndDialog" Value="Return">1</Publish>
        </Control>
      </Dialog>
      <Dialog Id="ControllerServerNameDlg" Width="370" Height="270" Title="Palette Agent Setup">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="no" Text="!(loc.WixUINext)">
          <Publish Event="SpawnDialog" Value="LicenseErrorDlg">LICENSEKEY = ""</Publish>
          <Publish Event="NewDialog" Value="InstallDirDlg" Order="2">NOT LICENSEKEY = ""</Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="Title" Type="Text" X="15" Y="6" Width="219" Height="28" Transparent="yes"
                 NoPrefix="yes" Text="Palette Configuration" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44"
                 TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Type="Text" Id="ServerNameTxt" Width="290" Height="10" X="20" Y="100"
                 Text="Controller Host Name:" />
        <Control Type="Edit" Id="ServerNameEdit" Width="250" Height="17" X="20" Y="112"
                 Property="SERVERNAME" />

        <Control Type="Text" Id="LicenseTxt" Width="290" Height="10" X="20" Y="160" Text="License Key: " />
        <Control Type="Edit" Id="LicenseEdit" Width="250" Height="17" X="20" Y="172" Property="LICENSEKEY" />

        <Control Type="Text" Id="InfoText1" Width="350" Height="17" X="10" Y="55"
                 Text="Please enter the Server Name and License Key for the Palette Controller." />
      </Dialog>
    </UI>
  </Fragment>
</Wix>