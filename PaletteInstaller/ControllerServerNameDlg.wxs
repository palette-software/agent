<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <!--TODO: Change C-->
    <CustomAction Id="UpdateIniWithServerName" BinaryKey="PaletteInstallerCA" DllEntry="UpdateIniWithServerName" 
                  Execute="immediate" Return="check" />
  </Fragment>
  <Fragment>
    <EnsureTable Id="ComboBox"/>
    <Property Id="SERVERNAME" Value=".palette-software.com"/>
    <Property Id="ISDOMAINCONTROLLER">
      <RegistrySearch Id="IsDomainController" Root="HKLM" Key="SYSTEM\CurrentControlSet\Control\ProductOptions" Name="ProductType" Type="raw" />
    </Property>
    <UI>
      <Dialog Id="LicenseErrorDlg" Width="260" Height="85" NoMinimize="yes" Title="Invalid License Key">
        <Control Type="Text" Id="ErrorText" Width="350" Height="17" X="60" Y="25" Text="The License Key entered was invalid." />
        <Control Id="Ok" Type="PushButton" X="97" Y="57" Width="66" Height="17" Text="OK">
          <Publish Event="EndDialog" Value="Return">1</Publish>
        </Control>
      </Dialog>
      <Dialog Id="ControllerServerNameDlg" Width="370" Height="270" Title="Palette Agent Setup">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="no" Text="!(loc.WixUINext)">
          <Publish Event="SpawnDialog" Value="LicenseErrorDlg">LICENSEKEY = ""</Publish>
          <Publish Event="NewDialog" Value="InstallDirDlg" Order="2">NOT LICENSEKEY = ""</Publish>
          <Publish Property="USEEXISTINGACCT" Value="0">USEEXISTINGACCT&lt;&gt;1 </Publish>
          <Publish Property="USEEXISTINGACCT" Value="1">USEEXISTINGACCT=1 </Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="Title" Type="Text" X="15" Y="6" Width="219" Height="38" Transparent="yes"
                 NoPrefix="yes" Text="Please enter the Server Name and License Key for the Palette Controller.  Agent will temporarily disable UAC on installation" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44"
                 TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Type="Text" Id="ServerNameTxt" Width="290" Height="10" X="20" Y="60"
                 Text="Controller Host Name:" />
        <Control Type="Edit" Id="ServerNameEdit" Width="250" Height="17" X="20" Y="72"
                 Property="SERVERNAME" />

        <!--<Control Type="Text" Id="MustCreateUserTxt" Width="290" Height="10" X="20" Y="130" Text ="Value for ISDOMAINCONTROLLER: [ISDOMAINCONTROLLER]">
          <Condition Action="show" >USEEXISTINGACCT&lt;&gt;1 AND ISDOMAINCONTROLLER &lt;&gt;"LanmanNT"</Condition>
          <Condition Action="show" >USEEXISTINGACCT = 1 OR ISDOMAINCONTROLLER = "LanmanNT"</Condition>
        </Control>-->

        <Control Type="Text" Id="LicenseTxt" Width="290" Height="10" X="20" Y="100" Text="License Key: " />
        <Control Type="Edit" Id="LicenseEdit" Width="250" Height="17" X="20" Y="112" Property="LICENSEKEY" />

        <Control Id="EnableCheckBox" Property="USEEXISTINGACCT" Type="CheckBox" X="20" Y="130" Width="290" Height="30" Text="Use Existing Administrator Account" CheckBoxValue="1">
          <Condition Action="hide" >ISDOMAINCONTROLLER = "LanmanNT"</Condition>
          <Condition Action="show" >ISDOMAINCONTROLLER = "WinNT" OR ISDOMAINCONTROLLER = "ServerNT"</Condition>
        </Control>

        <Control Type="Text" Id="AdminAcctNameTxt" Width="290" Height="10" X="20" Y="160" Text="Administrator Account Name">
          <Condition Action="hide" >USEEXISTINGACCT&lt;&gt;1 AND ISDOMAINCONTROLLER &lt;&gt;"LanmanNT"</Condition>
          <Condition Action="show" >USEEXISTINGACCT = 1 OR ISDOMAINCONTROLLER = "LanmanNT"</Condition>
        </Control>
        <Control Type="Edit" Id="AdminAcctNameEdit" Width="250" Height="17" X="20" Y="172" Property="SERVICEACCOUNT" >
          <Condition Action="hide" >USEEXISTINGACCT&lt;&gt;1 AND ISDOMAINCONTROLLER &lt;&gt;"LanmanNT"</Condition>
          <Condition Action="show" >USEEXISTINGACCT = 1 OR ISDOMAINCONTROLLER = "LanmanNT"</Condition>
        </Control>

        <Control Type="Text" Id="AdminAcctPwdTxt" Width="290" Height="10" X="20" Y="200"
         Text="Admin Account Password:" >
          <Condition Action="hide" >USEEXISTINGACCT&lt;&gt;1 AND ISDOMAINCONTROLLER &lt;&gt;"LanmanNT"</Condition>
          <Condition Action="show" >USEEXISTINGACCT = 1 OR ISDOMAINCONTROLLER = "LanmanNT"</Condition>
        </Control>
        <Control Type="Edit" Id="AdminAcctPwdEdit" Width="250" Height="17" X="20" Y="212" Property="SERVICEPASSWORD" Password="yes">
          <Condition Action="hide" >USEEXISTINGACCT&lt;&gt;1 AND ISDOMAINCONTROLLER &lt;&gt;"LanmanNT"</Condition>
          <Condition Action="show" >USEEXISTINGACCT = 1 OR ISDOMAINCONTROLLER = "LanmanNT"</Condition>
        </Control>

      </Dialog>
    </UI>
  </Fragment>
</Wix>